if [ -z "$1" ]
  then
    echo "Please specify an inventory/environment"
    exit 1
fi

inventory=$1
app_name=__APP_NAME__

ansible-playbook --inventory-file=provisioning/inventories/\$inventory --user deploy --sudo --ask-vault-pass --extra-vars '{\"app_name\":\"$app_name\"}' -vvvv provisioning/site.yml
