  path: /usr/bin/nodejs

nginx_sites:
  rails:
    - listen {{ web.port }}
    - server_name localhost
    - location / { try_files $uri @proxy; }
    - location @proxy { include proxy_params; proxy_redirect off; proxy_pass http://{{ app_name }}; }
    - root {{ rails.path }}
nginx_configs:
  upstream:
      - upstream {{ app_name }} { server 127.0.0.1:3000; }
